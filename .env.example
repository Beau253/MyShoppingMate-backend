# ============================================
# Database Configuration
# ============================================
POSTGRES_DB=myshoppingmate
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres_password

MONGO_INITDB_ROOT_USERNAME=mongo
MONGO_INITDB_ROOT_PASSWORD=mongo_password

# ============================================
# RabbitMQ Configuration
# ============================================
RABBITMQ_DEFAULT_USER=rabbitmq
RABBITMQ_DEFAULT_PASS=rabbitmq_password

# ============================================
# Application Configuration
# ============================================
JWT_SECRET=your_super_secret_jwt_key_change_in_production
NODE_ENV=production

# ============================================
# Service-Specific Environment Variables
# ============================================

# Auth Service
AUTH_PORT=3000
AUTH_DATABASE_URL=postgresql://postgres:postgres_password@postgres:5432/myshoppingmate

# List Service
LIST_PORT=3001
LIST_DATABASE_URL=postgresql://postgres:postgres_password@postgres:5432/myshoppingmate

# Product Catalog Service
PRODUCT_PORT=3002
PRODUCT_MONGO_URI=mongodb://mongo:mongo_password@mongo:27017/product_catalog?authSource=admin

# Price Data Service
PRICE_PORT=3003
PRICE_MONGO_URI=mongodb://mongo:mongo_password@mongo:27017/price_data?authSource=admin

# Data Ingestion Worker
WORKER_RABBITMQ_URI=amqp://rabbitmq:rabbitmq_password@rabbitmq:5672
